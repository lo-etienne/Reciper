<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipedisplayer.RecipeDisplayerFragment">

    <ImageView
        android:id="@+id/recipe_illustration"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_recipe_illustration_background"
        android:background="#FF00FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recipe_illustration"
        android:layout_marginTop="5dp"
        android:text="Nom de la recette"
        android:textSize="22dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Ici se trouvera la description de la recette"
        app:layout_constraintTop_toBottomOf="@id/recipe_name"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/icon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:constraint_referenced_ids="person_icon, person_text, timer_icon, timer_text, price_icon, price_text"/>

    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/person_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/person_icon"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="2dp"
        android:text="0"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/timer_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_timer"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        app:layout_constraintStart_toEndOf="@id/person_text"/>

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/timer_icon"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="2dp"
        android:text="0 min"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/price_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_price"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        app:layout_constraintStart_toEndOf="@id/timer_text"/>
    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/price_icon"
        app:layout_constraintTop_toBottomOf="@id/recipe_description"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="2dp"
        android:text="Pas cher"
        android:textSize="20dp"/>
    <!-- INGREDIENTS LIST -->
    <TextView
        android:id="@+id/ingredients_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrédients"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/person_icon"/>

    <ListView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredients_list_title"/>

    <!-- PREPARATION STEPS LIST -->
    <TextView
        android:id="@+id/preparation_steps_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Préparation"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ingredients_list"/>
    <ListView
        android:id="@+id/preparation_steps_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/preparation_steps_list_title"/>

    <!-- COOKING STEPS LIST -->
    <TextView
        android:id="@+id/cooking_steps_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuisson"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/preparation_steps_list"/>
    <ListView
        android:id="@+id/cooking_steps_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cooking_steps_list_title"/>





</androidx.constraintlayout.widget.ConstraintLayout>